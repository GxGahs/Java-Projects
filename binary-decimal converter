package computer;
import javax.swing.JOptionPane;
public class fuckJoey {

	public static void main(String[] args) 
	{
		
		Object[] options = {"binary to decimal","decimal to binary"};
		int choice = JOptionPane.showOptionDialog(null,"What would you like to do today","Converter", JOptionPane.DEFAULT_OPTION, 3, null, options, options[0])
				,decimalConv=0;
//binary to decimal		
		if (choice == 0)
		{
			String binary = JOptionPane.showInputDialog("Enter your binary number:");
			
			for (int i=0; i<binary.length();i++)
			{
				if (Integer.parseInt(binary.substring(i, i+1))==1 || Integer.parseInt(binary.substring(i, i+1))==0)
				{
					decimalConv += Integer.parseInt(binary.substring(i, i+1))*((int)Math.pow(2, (binary.length()-i-1)));
					if (i== binary.length()-1)
						JOptionPane.showMessageDialog(null, "Your number in decimal is:\n" + decimalConv);
				}
				else 
				{
					JOptionPane.showMessageDialog(null, "That is not a binary number.");
					break;
				}
			}
		}		
		
//end binary to decimal		
		if (choice == 1)
		{
			int decimal = Integer.parseInt(JOptionPane.showInputDialog("Enter your decimal number (less than 65536):"));
			if (decimal > 65535)
				JOptionPane.showMessageDialog(null,"That number can't be computed, it's too large.");
			else
			{
				String binaryConv = "";
				for (int i=15; i>=0; i--)
				{
					if (decimal-(Math.pow(2, i))>=0)
					{
						binaryConv = binaryConv + "1";
						decimal = decimal - (int)(Math.pow(2, i));
						
					}
					else
					{
						binaryConv = binaryConv + "0";	
						
					}
					System.out.println(i + ", " + decimal);
				}

			
			 	if (binaryConv.substring(0,1).equals("0"))
			{ 
				do
				{
					binaryConv = binaryConv.substring(1, binaryConv.length());
				} while (binaryConv.substring(0,1).equals("0"));
			}
			
				
			JOptionPane.showMessageDialog(null, "Your number in decimal is:\n" + binaryConv);
			}
//end decimal to binary
		}
	}
}
